<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_graph_splash">

    <include app:graph="@navigation/nav_graph_splash"/>
    <include app:graph="@navigation/nav_graph_home"/>
    <include app:graph="@navigation/nav_graph_catalog"/>
    <include app:graph="@navigation/nav_graph_cart"/>
    <include app:graph="@navigation/nav_graph_user"/>
    <include app:graph="@navigation/nav_graph_search"/>
    <include app:graph="@navigation/nav_graph_product_details"/>

    <fragment
        android:id="@+id/fragment_sign_in"
        android:name="com.narcissus.marketplace.ui.sign_in.SignInFragment"
        tools:layout="@layout/fragment_sign_in" >
        <argument
            android:name="isNavigatedFromUserProfile"
            app:argType="boolean" />
        <action
            android:id="@+id/action_fragment_sign_in_to_user"
            app:destination="@id/fragment_user" />

        <deepLink app:uri="marketplace-app://sign-in/{isNavigatedFromUserProfile}" />

    </fragment>

    <fragment
        android:id="@+id/fragment_sign_up"
        android:name="com.narcissus.marketplace.ui.sign_up.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">

        <deepLink app:uri="marketplace-app://sign-up" />

    </fragment>

</navigation>
