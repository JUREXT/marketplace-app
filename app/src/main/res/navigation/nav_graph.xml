<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_splash">

    <include app:graph="@navigation/nav_graph_search"/>

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.narcissus.marketplace.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_fragment_home_to_fragment_product_details"
            app:destination="@id/fragment_product_details" />
        <action
            android:id="@+id/action_fragment_home_to_search"
            app:destination="@id/nav_graph_search" />
    </fragment>

    <fragment
        android:id="@+id/fragment_catalog"
        android:name="com.narcissus.marketplace.ui.catalog.CatalogFragment"
        android:label="CatalogFragment">
        <action
            android:id="@+id/action_fragment_catalog_to_search"
            app:destination="@id/nav_graph_search" />
    </fragment>

    <fragment
        android:id="@+id/fragment_cart"
        android:name="com.narcissus.marketplace.ui.cart.CartFragment"
        android:label="CartFragment" />

    <fragment
        android:id="@+id/fragment_user"
        android:name="com.narcissus.marketplace.ui.user.UserFragment"
        android:label="UserFragment" />

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.narcissus.marketplace.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_fragment_splash_to_fragment_home"
            app:destination="@id/fragment_home"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/fragment_product_details"
        android:name="com.narcissus.marketplace.ui.product_details.ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="productId"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailsFragment_to_productDetailsFragment"
            app:destination="@id/fragment_product_details" />
        <action
            android:id="@+id/action_productDetailsFragment_to_productReviewsFragment"
            app:destination="@id/reviewsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            />

    </fragment>
    <fragment
        android:id="@+id/reviewsFragment"
        android:name="com.narcissus.marketplace.ui.product_details.reviews.ReviewsFragment"
        android:label="@string/reviews"
        tools:layout="@layout/fragment_reviews">
        <argument
            android:name="productReviews"
            app:argType="com.narcissus.marketplace.ui.product_details.model.ReviewParcelable[]" />
    </fragment>

</navigation>
