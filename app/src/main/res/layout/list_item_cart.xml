<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cart_item_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product_img_example"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_item_icon"
        app:layout_constraintStart_toEndOf="@+id/cart_item_icon"
        tools:text="$1299" />

    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/cart_item_price"
        app:layout_constraintTop_toTopOf="@+id/cart_item_icon"
        tools:text="Macbook Pro 13" />

    <ImageButton
        android:id="@+id/cart_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/close_button"
        app:layout_constraintBottom_toBottomOf="@+id/add_delete_product"
        app:layout_constraintEnd_toStartOf="@+id/add_delete_product"
        app:layout_constraintTop_toTopOf="@+id/add_delete_product" />

    <LinearLayout
        android:id="@+id/add_delete_product"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox">

        <ImageButton
            android:id="@+id/cart_item_remove_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:background="@drawable/ic_subtract"
            android:backgroundTint="#000000"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/cart_item_product_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            tools:text="12" />

        <ImageButton
            android:id="@+id/cart_item_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="3dp"
            android:background="@drawable/ic_add"
            android:backgroundTint="#000000"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_item_name"
        app:layout_constraintEnd_toEndOf="@+id/add_delete_product"
        app:layout_constraintTop_toTopOf="@+id/cart_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>