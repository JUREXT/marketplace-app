<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/product_details_side_margin"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/product_details_side_margin">

    <TextView
        android:id="@+id/tvDetailsAboutTitleSingleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/B2_body_grey"
        app:layout_constraintBottom_toBottomOf="@id/tvDetailsAboutValueSingleLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDetailsAboutValueSingleLine"
        tools:text="Type"/>

    <ImageView
        android:id="@+id/ivDetailsAboutDelimiterMultipleLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/dotted_line"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvDetailsAboutValueSingleLine"
        app:layout_constraintEnd_toStartOf="@id/tvDetailsAboutValueSingleLine"
        app:layout_constraintStart_toEndOf="@id/tvDetailsAboutTitleSingleLine"
        app:layout_constraintTop_toTopOf="@id/tvDetailsAboutValueSingleLine"
        android:contentDescription="@string/about" />

    <TextView
        android:id="@+id/tvDetailsAboutValueSingleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/B2_body_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "Laptop"/>


</androidx.constraintlayout.widget.ConstraintLayout>
